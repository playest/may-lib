<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.irit.smac.lib</groupId>
		<artifactId>parent</artifactId>
		<version>0.0.1</version>
	</parent>

	<groupId>fr.irit.smac.may.lib</groupId>
	<artifactId>parent</artifactId>
	<version>0.0.2</version>
	<packaging>pom</packaging>
	<description>Parent pom for all MAY libraries</description>

	<repositories>
		<repository>
			<id>fr.irit.smac</id>
			<url>http://www.irit.fr/~Victor.Noel/maven-repos/</url>
		</repository>
	</repositories>

	<scm>
		<connection>scm:hg:https://anon@wwwsecu.irit.fr/hg/SMAC/victor-noel-phd/may/lib/</connection>
		<developerConnection>scm:hg:https://wwwsecu.irit.fr/hg/SMAC/victor-noel-phd/may/lib/</developerConnection>
		<url>https://wwwsecu.irit.fr/hg/SMAC/victor-noel-phd/may/lib/</url>
	</scm>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>1.7</version>
					<executions>
						<execution>
							<id>add-source</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>add-source</goal>
							</goals>
							<configuration>
								<sources>
									<source>src-gen</source>
								</sources>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	
	<properties>
		<!--
		Used to prevent eclipse to add speadl files
		to the target dir.
		 -->
		<outside-eclipse>true</outside-eclipse>
	</properties>
	
	<profiles>
		<profile>
			<id>add-speadl-resources</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>outside-eclipse</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<resources>
					<resource>
						<directory>src/main/java</directory>
						<includes>
							<include> **/*.speadl</include>
						</includes>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>
</project>
